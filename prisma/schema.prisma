generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TodoStatus { 
  CHECKED
  NOT_CHECKED
}

enum TodoPriority { 
  LOW
  MEDIUM
  HIGH
}

model Todo {
  id        String     @id @default(cuid())
  status     TodoStatus @default(NOT_CHECKED)
  priority   TodoPriority @default(LOW)
  deadline DateTime?
  label String
  isDeleted Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}
